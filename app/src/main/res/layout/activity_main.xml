<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.oasis.cricketscorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/team_a_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:text="INDIA"
                android:background="@android:color/holo_orange_dark"
                android:textColor="@android:color/black"
                android:textSize="14sp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextCodeFont"
                    android:id="@+id/team_a_score"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="56sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:fontFamily="sans-serif-light"
                    android:text="/"
                    android:textSize="56sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:id="@+id/team_a_wickets"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="56sp"
                />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextCodeFont"
                    android:fontFamily="sans-serif-light"
                    android:text="("
                    android:textSize="30sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:id="@+id/team_a_overs"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="30sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:fontFamily="sans-serif-light"
                    android:text="."
                    android:textSize="30sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:id="@+id/team_a_balls"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="30sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:fontFamily="sans-serif-light"
                    android:text=")"
                    android:textSize="30sp"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:onClick="incrementBallByOneForTeamA"
                    android:text="+1B"
                    android:textSize="18sp"/>

                <Button
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:onClick="incrementWicketForTeamA"
                    android:text="+1w"
                    android:textSize="18sp"/>




            </LinearLayout>


            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreByOneForTeamA"
                android:text="+1 Run"
            />

            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreByTwoForTeamA"
                android:text="+2 Runs"
            />

            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreByThreeForTeamA"
                android:text="+3 Runs"
                />
            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreByFourForTeamA"
                android:text="Four"
                />

            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreBySixForTeamA"
                android:text="Six"
                />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/team_b_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/holo_green_dark"
                android:text="PAKISTAN"
                android:textColor="@android:color/black"
                android:textSize="14sp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextCodeFont"
                    android:id="@+id/team_b_score"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="56sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:fontFamily="sans-serif-light"
                    android:text="/"
                    android:textSize="56sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:id="@+id/team_b_wickets"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="56sp"
                />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextCodeFont"
                    android:fontFamily="sans-serif-light"
                    android:text="("
                    android:textSize="30sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:id="@+id/team_b_overs"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="30sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:fontFamily="sans-serif-light"
                    android:text="."
                    android:textSize="30sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:id="@+id/team_b_balls"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="30sp"
                />

                <TextView
                    style="@style/TextCodeFont"
                    android:fontFamily="sans-serif-light"
                    android:text=")"
                    android:textSize="30sp"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:onClick="incrementBallByOneForTeamB"
                    android:text="+1B"
                    android:textSize="18sp"/>

                <Button
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:onClick="incrementWicketForTeamB"
                    android:text="+1w"
                    android:textSize="18sp"/>

            </LinearLayout>

            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreByOneForTeamB"
                android:text="+1 Run"/>

            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreByTwoForTeamB"
                android:text="+2 Runs"/>

            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreByThreeForTeamB"
                android:text="+3 Runs"/>

            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreByFourForTeamB"
                android:text="Four"/>

            <Button
                style="@style/ButtonCodeFont"
                android:onClick="incrementScoreBySixForTeamB"
                android:text="Six"/>
        </LinearLayout>

    </LinearLayout>


    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:onClick="resetAll"
        android:text="Reset"
        android:textSize="18sp"/>


</RelativeLayout>